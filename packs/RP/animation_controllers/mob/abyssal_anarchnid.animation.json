{
    "format_version": "1.10.0",
    "animation_controllers": {
      "controller.animation.abyssal_anarchnid": {
        "states": {
            "default": {
              "transitions":[
                 {"idle": "q.is_on_ground"}
              ]
            },
            "idle":{
                "animations": [
                    "idle"
                ],
                "transitions": [
                    {
                      "default": "q.all_animations_finished && q.is_on_ground"
                       
                    },
                    {
                      "walk" : "q.property(q.modified_move_speed > 0.14)  && q.is_on_ground"
                    }
                ]
            },
            "walk":{
              "animations": [
                "walk"
              ],
              "transitions": [
                {
                  "default": "q.all_animations_finished && q.is_on_ground"
                }
              ]
            }
        }
    }
  }
}