{
    "format_version": "1.20.0",
    "animation_controllers": {
        "controller.animation.electrizard":{
            "initial_state": "default",
            "states": {
                "default":{
                    "on_entry": [
                        "v.attack_1 = 0;",
                        "@s dummy:atk.0"
                    ],
                    "transitions": [
                        
                        {
                            "attack": "q.is_delayed_attacking"
                        },
                        {
                            "death" : "q.property('dummy:dead')"    
                        }
                    ]
                },
               
                "attack": {
                    "animations": [
                      "attack"
                    ],
                    "on_entry": [
                      "@s dummy:atk.1"
                    ],
                    "transitions": [
                        {
                            "default": "q.all_animations_finished"
                        }
                    ]
                  },
                "death":{
                    "on_entry": [
                        "@s dummy:dead"
                    ],
                    "animations": [
                        "death"
                    ],
                    "on_exit": [
                        "@s dummy:despawn"
                    ],
                    "transitions": [
                        {
                            "death.end": "q.all_animations_finished"
                        }
                    ]
                },
                "death.end":{}
            }
        },
    "controller.animation.electrizard.attack": {
      "states": {
        "default": {
          "on_entry": [
            "v.attack_1 = 0;"
          ],
          "transitions": [
            {
              "attack": "q.property('dummy:atk') == 1"
            },
            {
              "thunderwave": "q.property('dummy:atk') == 2"
            },
            {
              "hitground": "q.property('dummy:atk') == 3"
            },
            {
              "stungrowl": "q.property('dummy:atk') == 4"
            }
          ]
        },
        "cooldown": {
          "on_entry": [
            "v.cooldown = q.life_time + math.random(0, 1);",
            "@s dummy:atk.0"
          ],
          "transitions": [
            {
              "attack": "q.life_time > (v.cooldown - 0.5) && q.in_range(v.attack_1, 1, 3)"
            },
            {
              "thunderwave": "q.life_time > (v.cooldown - 0.5) && v.attack_1 == 4"
            },
            {
              "end_attack": "q.life_time > v.cooldown && (v.attack_1 == 0)"
            }
          ]
        },
        "end_attack": {
          "on_exit": [
            "v.attack = 0;"
          ],
          "transitions": [
            {
              "default": "(1.0)"
            }
          ]
        },
        "attack": {
          "animations": [
            "attack"
          ],
          "on_entry": [
            "v.attack_1 = v.attack_1 + 1;",
            "@s dummy:atk.1"
          ],
          "transitions": [
            {
              "cooldown": "q.all_animations_finished"
            }
          ]
        },
        "thunderwave": {
          "animations": [
            "thunderwave"
          ],
          "on_entry": [
            "v.attack_1 = 0;",
            "v.thunderwave = q.life_time + 0.6;",
            "v.thunderwave_end = q.life_time + 1.16;",
            "@s dummy:atk.2"
          ],
          "transitions": [
            {
              "cooldown": "q.all_animations_finished"
            }
          ]
        },
        "hitground": {
          "animations": [
            "hitground"
          ],
          "on_entry": [
            "@s dummy:atk.3"
          ],
          "transitions": [
            {
              "cooldown": "q.all_animations_finished"
            }
          ]
        },
        "stungrowl": {
          "animations": [
            "stungrowl"
          ],
          "on_entry": [
            "@s dummy:atk.4"
          ],
          "transitions": [
            {
              "cooldown": "q.all_animations_finished"
            }
          ]
        }
      }
    }
    }
    
  

}