{
    "format_version": "1.18.10",
    "minecraft:entity": {
      "description": {
        "identifier": "dummy:devilmon",
        "is_spawnable": true,
        "is_summonable": true,
        "is_experimental": false,
        "animations": {
            "root": "controller.animation.devilmon",
            "death" : "animation.devilmon.death",
            "spit" : "animation.devilmon.spit"
          },
          "scripts": {
            "animate": [
              {
                "root": "!q.is_stunned"
              }
            ]
          },
          "properties": {
                "dummy:atk":{
                    "client_sync": true,
                    "type": "int",
                    "range": [0,3],
                    "default": 0
                },
                "dummy:dead": {
                    "client_sync": true,
                    "type": "bool",
                    "default": false
                  }
            }
      },
      
  
  
      "components": {
      
        "minecraft:variant": {
            "value": 1
          },
          "minecraft:collision_box": {
            "width": 0.52,
            "height": 0.52
          },
          "minecraft:health": {
            "value": 18,
            "max": 18
          },
          "minecraft:movement": {
            "value": 0.26
          },
          "minecraft:attack": {
            "damage": 7
          },
          "minecraft:loot": {
            "table": "loot_tables/entities/devilmon.json"
          },
          
        "minecraft:is_hidden_when_invisible": {
        },
        "minecraft:experience_reward": {
          "on_death": "query.last_hit_by_player ? 4 : 0"
        },
        "minecraft:type_family": {
          "family": [ "slime", "monster", "mob", "devilmon" ]
        },
        "minecraft:breathable": {
          "total_supply": 15,
          "suffocate_time": 0
        },
        "minecraft:navigation.walk": {
          "can_path_over_water": true,
          "avoid_water": true
        },
        "minecraft:jump.static": {
        },
        "minecraft:can_climb": {
        },
        "minecraft:hurt_on_condition": {
          "damage_conditions": [
            {
              "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
              "cause": "lava",
              "damage_per_tick": 4
            }
          ]
        },
        "minecraft:movement.jump": {
          "jump_delay": [ 0.5, 1.5 ]
        },
        "minecraft:on_target_acquired": {
          "event": "minecraft:become_aggressive",
          "target": "self"
        },
        "minecraft:on_target_escape": {
          "event": "minecraft:become_calm",
          "target": "self"
        },
        "minecraft:nameable": {
        },
       
        "minecraft:behavior.float": {
          "priority": 1
          
        },
        "minecraft:behavior.random_stroll":{
            "priority": 3,
            "speed_multiplier": 0.8
        },
        "minecraft:damage_sensor": {
            "triggers": [
              {
                "deals_damage": true,
                "on_damage": {
                  "event": "dummy:dead",
                  "filters": {
                    "test": "has_damage",
                    "value": "fatal"
                  }
                }
              }
            ]
        },
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 1,
          "entity_types": [
            {
              "filters": {
                "any_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "player"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "snowgolem"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "irongolem"
                  }
                ]
              },
              "max_dist": 16
            }
          ],
          "must_see": true
        },
        "minecraft:physics": {
        },
        "minecraft:pushable": {
          "is_pushable": true,
          "is_pushable_by_piston": true
        },
        "minecraft:conditional_bandwidth_optimization": {
        }
      },
      "component_groups": {
            "despawn": {
                "minecraft:despawn": {}
            },
            "mode_switcher": {
                "minecraft:target_nearby_sensor": {
                "inside_range": 2.0,
                "outside_range": 3.0,
                "must_see":  true,
                "on_inside_range": {
                    "event": "switch_to_melee",
                    "target": "self"
                },
                "on_outside_range": {
                    "event": "switch_to_ranged",
                    "target": "self"
                }
                }
            },
            "ranged_mode": {
                "minecraft:shooter": {
                "def": "dummy:devilmon_spit"
                },
                "minecraft:behavior.ranged_attack": {
                "priority": 3,
                "speed_multiplier": 0.5,
                "attack_interval": 2,
                "attack_radius": 5
                }
            },
            "melee_mode": {
                "minecraft:attack": {
                "damage": 6
                },
                "minecraft:behavior.delayed_attack": {
                "priority": 3
                }
            }
        },
      "events": {
        "dummy:atk.0": {
            "set_property": {
              "dummy:atk": 0
            }
        },
        "dummy:atk.1": {
            "set_property": {
              "dummy:atk": 1
            }
        },
        "dummy:atk.2": {
            "set_property": {
              "dummy:atk": 2
            }
        },
        "dummy:atk.3": {
            "set_property": {
              "dummy:atk": 3
            }
        },
        "dummy:dead": {
            "set_property": {
              "dummy:dead": true,
              "dummy:atk": 0
            }   
        },
        "dummy:despawn":{
            "add": {
                "component_groups": [
                    "despawn"
                ]
            }
        },
        "minecraft:entity_spawned": {
            "add": {
            "component_groups": [
                "mode_switcher"
            ]
            }
        },
        "switch_to_melee": {
            "remove": {
            "component_groups": [
                "ranged_mode"
            ]
            },
            "add": {
            "component_groups": [
                "melee_mode"
            ]
            }
        },
        "switch_to_ranged": {
            "remove": {
            "component_groups": [
                "melee_mode"
            ]
            },
            "add": {
            "component_groups": [
                "ranged_mode"
            ]
            }
        },
        "minecraft:on_hurt_event": {
        "add": {
        "component_groups": [
            "mode_switcher"
        ]
        }
            
        
    }}
    }
  }