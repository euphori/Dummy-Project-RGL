{
    "format_version": "1.12.0",
    "minecraft:entity": {
        "description": {
            "identifier": "dummy:abyssal_anarchnid",
            "is_spawnable": true,
            "is_summonable": true,
            "animations": {
                "root" : "controller.animation.abyssal_anarchnid",
                "attack" : "animation.abyssal_anarchnid.attack",
                "death" : "animation.abyssal_anarchnid.death",
                "web" : "animation.abyssal_anarchnid.web"
            },
            "scripts": {
                "animate": [
                    {
                        "root" : "!q.is_stunned"
                    }
                ]
            },
            "properties": {
                "dummy:atk":{
                    "client_sync": true,
                    "type": "int",
                    "range": [0,3],
                    "default": 0
                },
                "dummy:dead": {
                    "client_sync": true,
                    "type": "bool",
                    "default": false
                  }
            }
        },
        "components": {
            "minecraft:physics": {},
            "minecraft:movement": {
                "value": 0.25
            },
            "minecraft:movement.basic": {},
            "minecraft:jump.static": {},
            "minecraft:navigation.walk": {
                "avoid_water": true
            },
            "minecraft:behavior.hurt_by_target": {
                "priority": 1
            },
            "minecraft:behavior.random_stroll":
            {
                "priority": 3,
                "speed_multiplier": 0.8
            },
            "minecraft:experience_reward": {
                "on_death": "query.last_hit_by_player ? 4:0"
            },
            "minecraft:behavior.nearest_attackable_target": {
                "priority": 2,
                "must_see": true,
                "reselect_targets": true,
                "within_radius": 25.0,
                "entity_types": [
                    {
                        "filters": {
                            "test": "is_family",
                            "subject": "other",
                            "value": "player"
                        },
                        "max_dist": 32
                    }
                ]
            },
            "minecraft:on_hurt": {
                "event": "minecraft:on_hurt_event",
                "target": "self"
            },
            "minecraft:on_hurt_by_player": {
                "event": "minecraft:on_hurt_event",
                "target": "self"
            },
            "minecraft:damage_sensor": {
                "triggers": [
                  {
                    "deals_damage": true,
                    "on_damage": {
                      "event": "dummy:dead",
                      "filters": {
                        "test": "has_damage",
                        "value": "fatal"
                      }
                    }
                  }
                ]
            },
            "minecraft:loot": {
                "table": "loot_tables/entities/abyssal_anarchnid.json"
            }
        },
        "component_groups": {
            "despawn": {
                "minecraft:instant_despawn": {}
            },
            "mode_switcher": {
                "minecraft:target_nearby_sensor": {
                "inside_range": 2.0,
                "outside_range": 3.0,
                "must_see":  true,
                "on_inside_range": {
                    "event": "switch_to_melee",
                    "target": "self"
                },
                "on_outside_range": {
                    "event": "switch_to_ranged",
                    "target": "self"
                }
                }
            },
            "ranged_mode": {
                "minecraft:shooter": {
                "def": "dummy:abyssal_anarchnid_web"
                },
                "minecraft:behavior.ranged_attack": {
                "priority": 3,
                "speed_multiplier": 0.5,
                "attack_interval": 2,
                "attack_radius": 5
                }
            },
            "melee_mode": {
                "minecraft:attack": {
                "damage": 6
                },
                "minecraft:behavior.delayed_attack": {
                "priority": 3,
                "attack_duration": 1,
                "attack_once": false,
                "cooldown_time": 1,
                "track_target": true,
                "require_complete_path": false,
                "random_stop_interval": 0,
                "reach_multiplier": 1.5,
                "speed_multiplier": 1.0,
                "hit_delay_pct": 1
            }
            }
        },
        
        "events": {
            "dummy:atk.0": {
                "set_property": {
                  "dummy:atk": 0
                }
            },
            "dummy:atk.1": {
                "set_property": {
                  "dummy:atk": 1
                }
            },
            "dummy:atk.2": {
                "set_property": {
                  "dummy:atk": 2
                }
            },
            "dummy:atk.3": {
                "set_property": {
                  "dummy:atk": 3
                }
            },
            "dummy:dead": {
                "set_property": {
                  "dummy:dead": true,
                  "dummy:atk": 0
                }   
            },
            "dummy:despawn":{
                "add": {
                    "component_groups": [
                        "despawn"
                    ]
                }
            },
            "minecraft:entity_spawned": {
                "add": {
                "component_groups": [
                    "mode_switcher"
                ]
                }
            },
            "switch_to_melee": {
                "remove": {
                "component_groups": [
                    "ranged_mode"
                ]
                },
                "add": {
                "component_groups": [
                    "melee_mode"
                ]
                }
            },
            "switch_to_ranged": {
                "remove": {
                "component_groups": [
                    "melee_mode"
                ]
                },
                "add": {
                "component_groups": [
                    "ranged_mode"
                ]
                }
            },
            "minecraft:on_hurt_event": {
            "add": {
            "component_groups": [
                "mode_switcher"
            ]
            }
                
            
        }
    }
}
}